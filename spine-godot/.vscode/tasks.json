{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-v4",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "args": [
                "-j 8",
                "dev_build=yes",
                "custom_modules=\"${workspaceFolder}/spine_godot"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-v3",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "args": [
                "-j 8",
                "debug",
                "custom_modules=\"${workspaceFolder}/spine_godot"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}